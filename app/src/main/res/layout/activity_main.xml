<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/save1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Preference" />

    <Button
        android:id="@+id/read1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Preference" />

    <Button
        android:id="@+id/saveInnerIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="saveInnerI/O"/>

    <Button
        android:id="@+id/readInnerIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ReadInnerI/O"/>

    <Button
        android:id="@+id/saveSDCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save SDCARD"/>

    <Button
        android:id="@+id/readSDCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read SDCARD"/>

    <Button
        android:id="@+id/insertSqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insetSQLite"/>

    <Button
        android:id="@+id/querySqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="querySQLite"/>

    <Button
        android:id="@+id/deleteSqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="deleteSQLite"/>

    <Button
        android:id="@+id/updateSqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="updateSQLite"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</LinearLayout>
</ScrollView>